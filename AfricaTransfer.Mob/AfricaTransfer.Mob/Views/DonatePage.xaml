<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AfricaTransfer.Mob.Views.DonatePage"
             Title="MobiFedha">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Add funds"
                    x:Name="AddFundsBtn"
                    Clicked="AddFundsBtn_Clicked"/>
            <Button Text="Transfer funds"
                    x:Name="TransferFundsBtn"
                    Clicked="TransferFundsBtn_Clicked"/>
            <Button Text="View reports"
                    x:Name="ViewReportsBtn"
                    Clicked="ViewReportsBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
