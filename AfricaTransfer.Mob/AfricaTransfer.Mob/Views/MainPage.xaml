<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AfricaTransfer.Mob.Views.MainPage"
             Title="MobiFedha">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Button Text="Buyer"
                    x:Name="BuyerBtn"
                    Clicked="BuyerBtn_Clicked"
                    FontSize="Large"/>
            <Button Text="Seller"
                    x:Name="SellerBtn"
                    Clicked="SellerBtn_Clicked"
                    FontSize="Large"/>
            <Button Text="Donate"
                    x:Name="DonateBtn"
                    Clicked="DonateBtn_Clicked"
                    FontSize="Large"/>

            <Button Text="Login"
                    Clicked="QrTest"
                    FontSize="Large"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
